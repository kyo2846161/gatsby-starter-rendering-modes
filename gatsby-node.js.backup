const path = require('path')

exports.createPages = ({
  actions,
}) => {

  actions.createPage({
    path: '/dsg',
    component: path.resolve('src/templates/dsg.js'),
    defer: true,
  })
}

const path = require('path');

exports.onCreateWebpackConfig = ({ stage, loaders, actions }) => {
  if (stage === "build-html" || stage === "develop-html") {
    actions.setWebpackConfig({
      module: {
        rules: [
          {
            test: /bad-module/,
            use: loaders.null(),
          },
        ],
      },
    })
  }
}